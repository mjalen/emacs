;; -*- coding: utf-8; lexical-binding: t -*-
(load-theme 'modus-vivendi)
(setq inhibit-startup-screen t
      use-package-always-ensure t
      initial-scratch-message nil
      sentence-end-double-space nil
      use-dialog-box nil
      mark-even-if-inactive nil
      default-directory "~/"
      display-line-numbers-mode 1
      load-prefer-newer t)

(menu-bar-mode -1)
(tool-bar-mode -1)
(scroll-bar-mode -1)
(tooltip-mode -1)
(delete-selection-mode t)

(add-to-list 'default-frame-alist '(alpha . 95))

(set-charset-priority 'unicode)
(prefer-coding-system 'utf-8-unix)

; Auto save on timer.
(defvar *auto-save-timer* nil)

(defun mjalen/enable-auto-save ()
  (interactive)
  (setq *auto-save-timer* (run-with-idle-timer 3 t #'save-buffer)))

(defun mjalen/disable-auto-save ()
  (interactive)
  (if *auto-save-timer* 
	(cancel-timer *auto-save-timer*) 
	(setq *auto-save-timer* nil)))

;; Define modes to auto-save. It is safer to opt-in than to opt-out.
(defconst *auto-save-hooks* '(emacs-lisp-mode-hook))
(dolist (hook *auto-save-hooks*)
  (add-hook hook #'mjalen/enable-auto-save))
(add-hook 'change-major-mode-hook #'mjalen/disable-auto-save)
 
(add-to-list 'default-frame-alist '(font . "Victor Mono-13"))
(set-frame-font "Victor Mono-13")

(setq package-archives '(("melpa" . "http://melpa.org/packages/")
			 ("org" . "https://orgmode.org/elpa/")
			 ("elpa" . "https://elpa.gnu.org/packages/")))

; Define packages here.
(custom-set-variables
 '(package-selected-packages
   '(package
     recentf
     icomplete
     no-littering
     evil)))

; Make sure all packages are installed.
(dolist (pkg package-selected-packages)
  (require pkg))

(with-eval-after-load 'icomplete
  (fido-mode -1)
  (icomplete-mode 1))

(with-eval-after-load 'no-littering
  (add-to-list 'recentf-exclude no-littering-var-directory)
  (add-to-list 'recentf-exclude no-littering-etc-directory)
  (minibuffer-message "Loaded no-littering"))

(with-eval-after-load 'evil
  (evil-mode 1))

(custom-set-faces)
